<%= form_for @reward, :html => { :class => "form-horizontal reward" } do |f| %>

  <% if @reward.errors.any? %>
    <div id="error_expl" class="panel panel-danger">
      <div class="panel-heading">
        <h3 class="panel-title"><%= pluralize(@reward.errors.count, "error") %> prohibited this reward from being saved:</h3>
      </div>
      <div class="panel-body">
        <ul>
        <% @reward.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
        </ul>
      </div>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :reward_name, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :reward_name, :class => 'form-control' %>
    </div>
    <%=f.error_span(:reward_name) %>
  </div>
  <div class="form-group">
    <%= f.label :cost, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.select :cost, (0..100) %>
    </div>
    <%=f.error_span(:cost) %>
  </div>
  <div class="form-group">
    <%= f.label :is_bought, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.check_box :is_bought %>
    </div>
    <%=f.error_span(:is_bought) %>
  </div>

  <div class="form-group">
    <div class="col-lg-offset-2 col-lg-10">
      <%= f.submit nil, :class => 'btn btn-primary' %>
      <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                rewards_path, :class => 'btn btn-default' %>
    </div>
  </div>

<% end %>
