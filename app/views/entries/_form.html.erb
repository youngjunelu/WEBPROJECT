<%= form_for @entry, :html => { :class => "form-horizontal entry" } do |f| %>

  <% if @entry.errors.any? %>
    <div id="error_expl" class="panel panel-danger">
      <div class="panel-heading">
        <h3 class="panel-title"><%= pluralize(@entry.errors.count, "error") %> prohibited this entry from being saved:</h3>
      </div>
      <div class="panel-body">
        <ul>
        <% @entry.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
        </ul>
      </div>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :value, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.select :value, (0..50) %>
    </div>
    <%=f.error_span(:value) %>
  </div>
  <div class="form-group">
    <%= f.label :habit_id, :class=> 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= collection_select(:entry, :habit_id, @habits, :id, :habit_name) %>
    </div>
    <%=f.error_span(:habit_id) %>
  </div>
  <div class="form-group">
    <%= f.label :date_time, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.datetime_select :date_time, :class => 'form-control' %>
    </div>
    <%=f.error_span(:date_time) %>
  </div>

  <div class="form-group">
    <div class="col-lg-offset-2 col-lg-10">
      <%= f.submit nil, :class => 'btn btn-primary' %>
      <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                entries_path, :class => 'btn btn-default' %>
    </div>
  </div>

<% end %>