<%- model_class = Habit -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.pluralize.titleize %></h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:id) %></th>
      <th><%= model_class.human_attribute_name(:habit_name) %></th>
      <th><%= model_class.human_attribute_name(:category_id) %></th>
      <th><%= model_class.human_attribute_name(:start_date_time) %></th>
      <th><%= model_class.human_attribute_name(:frequency) %></th>
      <th><%= model_class.human_attribute_name(:unit) %></th>
      <th><%= model_class.human_attribute_name(:habit_icon) %></th>
      <th><%= model_class.human_attribute_name(:habit_description) %></th>
      <th><%= model_class.human_attribute_name(:created_at) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @habits.each do |habit| %>
      <tr>
        <td><%= link_to habit.id, habit_path(habit) %></td>
        <td><%= habit.habit_name %></td>
        <td><%= habit.category_id %></td>
        <td><%= habit.start_date_time %></td>
        <td><%= habit.frequency %></td>
        <td><%= habit.unit %></td>
        <td><%= habit.habit_icon %></td>
        <td><%= habit.habit_description %></td>
        <td><%=l habit.created_at %></td>
        <td>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_habit_path(habit), :class => 'btn btn-default btn-xs' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      habit_path(habit),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-xs btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_habit_path,
            :class => 'btn btn-primary' %>
