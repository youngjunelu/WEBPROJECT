<%- model_class = Habit -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:habit_name) %>:</strong></dt>
  <dd><%= @habit.habit_name %></dd>
  <dt><strong><%= model_class.human_attribute_name(:category_id) %>:</strong></dt>
  <dd><%= @habit.category_id %></dd>
  <dt><strong><%= model_class.human_attribute_name(:start_date_time) %>:</strong></dt>
  <dd><%= @habit.start_date_time %></dd>
  <dt><strong><%= model_class.human_attribute_name(:frequency) %>:</strong></dt>
  <dd><%= @habit.frequency %></dd>
  <dt><strong><%= model_class.human_attribute_name(:unit) %>:</strong></dt>
  <dd><%= @habit.unit %></dd>
  <dt><strong><%= model_class.human_attribute_name(:habit_icon) %>:</strong></dt>
  <dd><%= @habit.habit_icon %></dd>
  <dt><strong><%= model_class.human_attribute_name(:habit_description) %>:</strong></dt>
  <dd><%= @habit.habit_description %></dd>
</dl>

<%= link_to t('.back', :default => t("helpers.links.back")),
              habits_path, :class => 'btn btn-default'  %>
<%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_habit_path(@habit), :class => 'btn btn-default' %>
<%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              habit_path(@habit),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
