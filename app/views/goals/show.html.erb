<%- model_class = Goal -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:goal_name) %>:</strong></dt>
  <dd><%= @goal.goal_name %></dd>
  <dt><strong><%= model_class.human_attribute_name(:goal_icon) %>:</strong></dt>
  <dd><%= @goal.goal_icon %></dd>
  <dt><strong><%= model_class.human_attribute_name(:is_reached) %>:</strong></dt>
  <dd><%= @goal.is_reached %></dd>
  <dt><strong><%= model_class.human_attribute_name(:goal_worth) %>:</strong></dt>
  <dd><%= @goal.goal_worth %></dd>
</dl>

<%= link_to t('.back', :default => t("helpers.links.back")),
              goals_path, :class => 'btn btn-default'  %>
<%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_goal_path(@goal), :class => 'btn btn-default' %>
<%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              goal_path(@goal),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
