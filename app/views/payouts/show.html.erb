<%- model_class = Payout -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:payout_name) %>:</strong></dt>
  <dd><%= @payout.payout_name %></dd>
  <dt><strong><%= model_class.human_attribute_name(:goal_id) %>:</strong></dt>
  <dd><%= @payout.goal_id %></dd>
  <dt><strong><%= model_class.human_attribute_name(:payout_icon) %>:</strong></dt>
  <dd><%= @payout.payout_icon %></dd>
</dl>

<%= link_to t('.back', :default => t("helpers.links.back")),
              payouts_path, :class => 'btn btn-default'  %>
<%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_payout_path(@payout), :class => 'btn btn-default' %>
<%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              payout_path(@payout),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
